 <div id="divHeaderLine1" style='margin-top: 40px;'>Потенциал регионов</div>
 <form class='form-horizontal' id='addToFilterRegionPotential' action="/getoffline_region_potential" method="post" style=' margin-left:40px; margin-top: 40px; ' enctype="multipart/form-data">
		 <div class="form-group row">
		 <label>Период выборки</label>
					<select class="form-control" name='month' id='month' class='form-control'>
						<option value='01'>Январь</option>
						<option value='02'>Февраль</option>
						<option value='03'>Март</option>
						<option value='04'>Апрель</option>
						<option value='05'>Май</option>
						<option value='06'>Июнь</option>
						<option value='07'>Июль</option>
						<option value='08'>Август</option>
						<option value='09'>Сентябрь</option>
						<option value='10'>Октябрь</option>
						<option value='11'>Ноябрь</option>
						<option value='12'>Декабрь</option>
					</select>
					<select class="form-control" name='year' id='year'class='form-control'>
						<option value='2017'>2017</option>
					</select>
		</div>
		 <div class="form-group row">
		 <label>Регион</label>
				<select class="form-control" name='region' id='regionChoose' class='form-control'>
						{{#each region}}
							<option value='{{this}}'>{{this}}</option>
						{{/each}}
				</select>
		 <label>Город</label>
				<select class="form-control" name='city' id='cityChoose' class='form-control'>

				</select>		
		</div>
		 <div class="form-group row">
		 <label>Букмекерская контора</label>
			<select class="form-control" name='bk' class='form-control'>
				<label>Выберите БК</label>
				<option value=''>Все конторы</option>
				{{#each bk}}
				<option value='{{bk}}' data-name='{{name}}'>{{name}}</option>
				{{/each}}
			</select>
			<input class="btn btn-primary" id='showTableRP' type="submit" value="Показать"></input>
			<a class="btn btn-danger" id='resetTableRP'>Сброс</a>
		</div>
	</form>	
	<div class="loader"></div>
	<div class="table-responsive">
			<table class="table table-striped" style='margin-top: 40px;'>
				<thead>
					<tr>
						  <th>Город</th>
						  <th>Кол-во ППС на 1000чел. населения</th>
						  <th>Кол-во ППС конторы на 1000чел. населения</th>
						  <th>Средняя зарплата по региону</th>
						  <th>Популярность ставок на спорт</th>
						  <th>Популярность конторы</th>
						  <th>Перспективность региона(в условных баллах)</th>
					</tr>
				 </thead>
				 <tbody id='bk_table_rp'>
				 </tbody>
			</table>
	</div>	
	<script src="/scripts/bk_region_potential.js" type="text/javascript"></script>