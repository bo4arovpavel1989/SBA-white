<form id="editLine"  action="/admin/editform?q=editlineform" method="post" style="margin-left: 5%;">
	<h3>Линия букмекера {{name}}</h3>
	{{#if _id}}
	<input type="text" class="form-control" style='display:none' name='_id' value='{{_id}}' readonly>
	{{else}}
	Страница не существует
	{{/if}}
	<div class="form-group">
		<div class="input-group">
			<label for = "name">Короткое название БК</label>
			<input type="text" class="form-control" name='bk' value='{{bk}}' readonly>
		</div>
	</div>
    <div class="form-group">
		<div class="input-group">
			<label for = "name">Полное название БК</label>
			<input type="text" class="form-control" name='name' value='{{name}}'>
		</div>
	</div>
	<div class="form-group">
		<div class="input-group">
			<label for = "name">Количество видов спорта</label>
			<input type="text" class="form-control" name='sportQuantity' value='{{sportQuantity}}'>
		</div>
	</div>
	<div class="form-group">
		<div class="input-group">
			<label for = "name">Количество рынков</label>
			<input type="text" class="form-control" name='marketQuantity' value='{{marketQuantity}}'>
		</div>
	</div>
	<div class="form-group">
		<div class="input-group">
			<label for = "name">Количество событий</label>
			<input type="text" class="form-control" name='eventQuantity' value='{{eventQuantity}}'>
		</div>
	</div>
	<div class="form-group">
		<div class="input-group">
			<label for = "name">Маржа прематч</label>
			<input type="number" class="form-control" name='marja_prematch' value='{{marja_prematch}}'>
		</div>
	</div>
	<div class="form-group">
		<div class="input-group">
			<label for = "name">Маржа лайв</label>
			<input type="number" class="form-control" name='marja_live' value='{{marja_live}}'>
		</div>
	</div>
    <div class="form-group">
		<input class="btn btn-primary" type="submit" value="Сохранить"></input>
 </div>
</form>