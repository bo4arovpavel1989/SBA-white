<script src="https://cdn3.devexpress.com/jslib/17.1.4/js/dx.all.js"></script>
<div class='container'>
    <div class="divPanel page-content">
        <div class="breadcrumbs">
                <a href="/">SBA</a> &nbsp;/&nbsp;  <a href="/bkpage/{{bk}}">Страница букмекера</a> &nbsp;/&nbsp;<span>Репутация</span>
            </div> 
        <div class="row-fluid">
                <div class="span12">
                     <div id="divHeaderLine1">Репутация букмекера {{name}}</div>
					 <form class='form-horizontal' id='showReputationData' action="/get_online_reputation_data" method="post" style=' margin-left:40px; margin-top: 40px; ' enctype="multipart/form-data">
					 <div class="form-group row">
					 <label>Период выборки <span class='help' title='Данные доступны начиная с октября 2017!'><b>[?]</b></span></label>
								<select class="form-control" name='monthFrom' class='form-control'>
									<option value='01'>Январь</option>
									<option value='02'>Февраль</option>
									<option value='03'>Март</option>
									<option value='04'>Апрель</option>
									<option value='05'>Май</option>
									<option value='06'>Июнь</option>
									<option value='07'>Июль</option>
									<option value='08'>Август</option>
									<option value='09'>Сентябрь</option>
									<option value='10'>Октябрь</option>
									<option value='11'>Ноябрь</option>
									<option value='12'>Декабрь</option>
								</select>
								<select class="form-control" name='yearFrom' class='form-control'>
									<option value='2017'>2017</option>
								</select>
								<span><b>&nbsp; - &nbsp;</b></span>
								<select class="form-control" name='monthTo' class='form-control'>
									<option value='01'>Январь</option>
									<option value='02'>Февраль</option>
									<option value='03'>Март</option>
									<option value='04'>Апрель</option>
									<option value='05'>Май</option>
									<option value='06'>Июнь</option>
									<option value='07'>Июль</option>
									<option value='08'>Август</option>
									<option value='09'>Сентябрь</option>
									<option value='10'>Октябрь</option>
									<option value='11'>Ноябрь</option>
									<option value='12'>Декабрь</option>
								</select>
								<select class="form-control" name='yearTo' class='form-control'>
									<option value='2017'>2017</option>
								</select>
					</div>
					<input name='bk' value='{{bk}}' style='display:none'></input>
					 <div class="form-group row">
						<input class="btn btn-primary" id='showData' type="submit" value="Показать"></input>
					</div>
				</form>	
				<div class="loader"></div>
				<div id='chartTitle' style='text-align:center;display:none;'><h3 style='font-weight:bolder'>соотношение отзывов {{name}}</h3></div>
				<div id='pie'>
				</div>
				<div id='reputationDataContainer'>
					<div id="gridArea" style="height: 1795px;">
						<div class="table-responsive"  style='width:70%;'>
							<table class="table table-striped" >
								<thead>
									<th></th>
									<th></th>
									<th>Всего</th>
									<th>Полож.</th>
									<th>Отриц.</th>
									<th>Нейтр.</th>
									<th>Оценка пользователей</th>
								</thead>
								<tbody id='reputationData'>
									
								</tbody>
							</table>
						</div>
						<ul id="tiles" class='lastCommentsContainer' style='list-style-type: none;'>  
						</ul>           
					</div>
                </div>
            </div>
    </div>
</div>
<script src='/scripts/online_reputationpage.js'></script>
<script>
	$(document).ready(function(){
		$('#onlineLink').addClass('active');
		$("#menu-toggle").click(function(e) {
			e.preventDefault();
			$("#wrapper").toggleClass("toggled");
		});
	});
 </script>
 <script id="feedbackSources" type="text/x-handlebars-template">
							<tr>
								<td></td>
								<td>\{{source}}</td>
								<td>\{{total}}</td>
								<td>\{{positive}}</td>
								<td>\{{negative}}</td>
								<td>\{{neutral}}</td>
								<td>\{{#if usermark}}\{{usermark}} / 5\{{/if}}</td>
							</tr>
</script>
<script id="lastComments" type="text/x-handlebars-template">        
			<li>
				<h4>Последние отзывы</h4>
				\{{#each comments}}
				 <p><span style='font-weight:700;'>\{{source}}: </span>"\{{feedbackText}}"</p>
				\{{/each}}
			</li>    
</script>